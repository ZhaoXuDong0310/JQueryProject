a
  color #000000
  font-weight bold
span
  color #000000
  font-weight bold
i
  list-style none
  font-style normal
  margin 0
  padding 0

.header2
  position fixed
  animation: play 0.5s;
  z-index 999
  @keyframes play
    0%
      transform: translateY(-100%);
    100%
      transform: translateY(0);
.header
  width 100%
  background #ffffff
  border-bottom 1px solid #e5e5e5
  .header_container
    box-sizing border-box
    padding 2.5px 0
    .header_content
      width 1200px
      height 70px
      margin 0 auto
      display flex
      .logo
        height 70px
        >img
          width 100%
          height auto
          margin-top 13px
      .position
        line-height 70px
        margin-left 80px
        display flex
        >a
          .changecity
            &:hover
              color #e94840
              transition color .5s
        .citypoint
          vertical-align middle
        .city
          margin-left -5px
        .changecity
          color #000000
          font-weight bold
      .header_list
        height 70px
        line-height 70px
        margin-left 70px
        >ul
          box-sizing border-box
          display flex
          width 600px
          justify-content space-between
          //padding 0 10px
          >li
            margin-left -10px
            &:first-child
              margin-left 0
            >a
              &:hover
                color #e94840
                transition color .5s
          >.login_wrapper
            .login
              background #e94840
              color #ffffff
              padding 5px
              border-radius 5px
.service_center
  width 1200px
  margin 0 auto
  position relative
  .h2
    line-height 85px
    width 1200px
    margin 0 auto
    font-size 18px
    font-weight bold
    .bright
      cursor pointer
      font-weight normal
      margin 0 10px
  .center_left
    width 960px
    float left
    margin-bottom 50px
    .ctop
      height 220px
      border 1px solid #e5e5e5
      background #ffffff
      .pic
        width 160px
        height 160px
        border 1px solid #e5e5e5
        margin 30px
        float left
      .spm
        float left
        position relative
        top 25px
        >i
          display block
          height 42px
          line-height 42px
          font-size 15px
          &:nth-child(1)
            font-size 18px
            color #1d1515
          >b
            color #fc545e
            font-size 20px
            margin-left 10px
            >em
              font-size 14px
              font-style normal
              font-weight 700
          .oldpic
            font-size 14px
            color #898989
            margin-left 40px
            font-weight normal
            >em
              text-decoration line-through
          .yishou
            color #fc545e
            font-style normal
            margin-left 16px
      .spf
        float right
        margin 20px 60px 0 0
        >img
          width 115px
          height 115px
        >b
          display block
          text-align center
          font-size 16px
          line-height 30px
          font-weight bold
          &:nth-child(3)
            color #fb474f
    .cdow
      clear both
      background #ffffff
      padding 30px 20px
      border 1px solid #e5e5e5
      margin-top 10px
      >b
        border-bottom 3px solid #fb474f
        padding 5px
        margin-top 10px
        width 66px
        display block
      >pre
        line-height 24px
        margin 15px 0 5px
        font-size 14px
        padding 9.5px
        word-break break-all
        word-wrap break-word
      >p
        line-height 24px
        margin 15px 0 5px
        font-size 14px
        >i
          margin-left 20px
          >em
            color #fb474f
            font-style normal

  .center_right
    position relative
    margin-left 10px
    width 230px
    float right
    .rightct
      width 230px
      border 1px solid #e5e5e5
      background #ffffff
      text-align center
      cursor pointer
      >h3
        font-size 20px
        padding-left 10px
        border-bottom 1px solid #e5e5e5
        height 60px
        line-height 60px
        margin 0
        text-align left
        font-weight bold
      >img
        width 80px
        height 80px
        text-align center
        margin 40px 50px
        margin-bottom 10px
      >p
        text-align left
        //font-weight bold
        padding 0 10px
        margin-bottom 0
        font-size 16px
        line-height 36px
        >i
          float right
          color #fb474f
    .erweima
      width 230px
      height 290px
      background url("../images/erweima.jpg") no-repeat center
      margin 10px 0 0
      >img
        margin 50px 0 0 50px
        vertical-align middle
        width 130px
